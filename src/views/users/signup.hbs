<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header bg-primary">
                <h3 class="bg text-center text-white">Registrar Cuenta</h3>
            </div>
            <div class="card-body">
                <form action="/users/signup" method="post">
                    <div class="form-group">
                        <input type="text" name="name" placeholder="Nombre Usuario" class="form-control" value="{{name}}">
                    </div>                    
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Pasword" class="form-control" value="{{password}}">
                    </div>
                    <div class="form-group">
                        <input type="password" name="confirm_password" placeholder="Confirmar Password" class="form-control" value="{{confirm_password}}">
                    </div>
                    <button class="btn btn-outline-success btn-block">GUARDAR</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row mt-5"> 
        <div class="col-md-5">
            <h3 class="bg bg-primary text-center text-white">Editar Estado</h1>
                <form action="/estados/update/{{datosEstado.id}}?_method=PUT" class="row g-3" method="POST">                              
                    <input type="hidden" name="_method" value="PUT">
                    <div class="col-6">
                        <div class="form-floating mb-3">
                            <label for="nombre_estado">Nombre Estado</label>
                            <input type="text" id="nombre_estado" name="nombre_estado" class="form-control" value="{{datosEstado.nombre_estado}}">
                        </div>
                    </div>
                    <div class="col-6 form-group">
                        <div class="form-floating mb-3">
                            <label for="numero" class="form-label">Estado</label>
                            <select name="estado" class="form-select form-control" aria-label="Default select example">
                                <option value="ACTIVA">ACTIVA</option>
                                <option value="INACTIVA">INACTIVA</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-12 d-grid">
                        <button class="btn btn-outline-success btn-block">
                            ACTUALIZAR
                        </button>
                    </div>                
                </form>
        </div>
        <div class="col-md-7">
            <h3 class="bg bg-primary text-center text-white">Lista de Estados</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre Estado</th>                        
                        <th scope="col">Estado</th>
                        <th colspan="2" scope="col">ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each listaEstados}}
                    <tr>
                        <td>{{@index}}</td>
                        <td>{{nombre_estado}}</td>                        
                        <td>{{estado}}</td>
                        <td><a href="/estados/update/{{id}}"><button type="button" class="btn btn-outline-success">Edit</button></a>
                        </td>
                        <td>
                            <form action="/estados/delete/{{id}}?_method=DELETE" method="post">
                                <button type="submit" class="btn btn-outline-danger">Del</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            {{nombre}}
        </div>
        <div class="col-md-5">
            <div class="ca">
                <div class="card-header bg-primary">
                    <h3>Nuevo Carrito</h3>
                </div>
                <div class="card-body">                    
                    <form action="/carritos/new-carrito" method="post">
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Nombre Carrito" required class="form-control" value="{{nombre}}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="cantidad" placeholder="Cantidad de Netbooks" required class="form-control" value="{{cantidad}}">
                        </div>
                        <div class="form-group">
                            <textarea name="detalle" class="form-control" placeholder="Detalle"></textarea>
                        </div>
                        <div class="form-guoup">
                            <button class="btn btn-primary">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-4 mx-auto">
    <div class="card text-center ">        
        <div class="card-header">
            <h3 class="card-title">Editar Carrito</h3>
        </div>
        <div class="card-bady" >
            <form action="/carritos/edit/{{carrito._id}}?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre Carrito" autofocus value="{{carrito.nombre}}">
                </div>
                <div class="form-group">
                    <input type="text" name="cantidad" class="form-control" placeholder="Cantidad de Netbooks" value="{{carrito.cantidad}}">
                </div>
                <div class="form-group">
                    <textarea name="detalle" class="form-control" placeholder="Detalle" >{{carrito.detalle}}</textarea>
                </div>
                <div class="form-guoup">
                    <button class="btn btn-primary">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>